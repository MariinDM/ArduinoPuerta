<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio"
    android:orientation="vertical"
    android:background="@color/bluegray3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:background="@color/bluegray4">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INICIO"
            android:textSize="55dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:layout_weight="1"
        android:backgroundTint="@color/bluegray10"
        android:onClick="user"
        android:text="VER USUARIOS"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="@color/bluegray10"
        android:onClick="reg"
        android:text="VER REGISTROS"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_margin="10sp" />

    <Button
        android:backgroundTint="@color/bluegray10"
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="GRAFICA"
        android:onClick="grafica"
        android:layout_margin="10sp"
        android:layout_weight="1"/>
    <Button
        android:backgroundTint="@color/bluegray10"
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="ABRIR"
        android:onClick="Accion1"
        android:layout_margin="10sp"
        android:layout_weight="1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/button6"
        android:textColor="@color/white"
        android:text="PERMISOS USUARIOS"
        android:textSize="20sp"
        android:layout_margin="10sp"
        android:backgroundTint="@color/bluegray10"
        android:onClick="permisos"/>

    <Button
        android:backgroundTint="@color/bluegray10"
        android:textColor="@color/white"
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="ABRIR NFC"
        android:onClick="nfctext"
        android:layout_margin="10sp"
        android:layout_weight="2"/>
</LinearLayout>